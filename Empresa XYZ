    <script>
        function excluirVenda(button) {
            // Implemente a lógica para excluir a venda associada a esta linha da tabela
            // Por exemplo, você pode remover a linha correspondente à venda clicada
            var row = button.parentNode.parentNode;
            row.parentNode.removeChild(row);
        }
